<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_marginStart="16dp"
    android:layout_toEndOf="@id/eventLocationView"
    tools:ignore="NotSibling">

    <TextView
        android:id="@+id/eventType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:gravity="left|top"
        android:background="@drawable/edge"
        android:paddingLeft="47dp"
        android:paddingBottom="5dp"
        android:textSize="15sp"
        tools:text="Click on a marker to see event details" />

    <TextView
        android:id="@+id/eventLocationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:background="@drawable/edge"
        android:gravity="left|bottom"
        android:paddingLeft="47dp"
        android:paddingTop="5dp"
        android:text="Click on a marker to see event details"
        android:textSize="15sp" />
</LinearLayout>

    <ImageView
        android:id="@+id/eventImageView"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center|left"
        android:src="@drawable/location" />

</RelativeLayout>